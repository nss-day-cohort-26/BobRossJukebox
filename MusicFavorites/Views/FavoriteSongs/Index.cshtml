@model IEnumerable<MusicFavorites.Models.FavoriteSong>

@{
    ViewData["Title"] = "Favorite Songs";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SongURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SongURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FavoriteSongId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FavoriteSongId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FavoriteSongId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>


<script src=@(String.Format("{0}{1}{2}", "js/", ViewData["script"], ".js"))></script>
